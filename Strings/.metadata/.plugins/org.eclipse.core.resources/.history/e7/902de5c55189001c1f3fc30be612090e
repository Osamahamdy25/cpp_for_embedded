#include <iostream>
#include<string.h>
using namespace std;

int main() {

	string str="Hello";
	string str2="world";

	string str3=str+str2; // using operator overloading

	cout<<str3<<endl;
	int len;
	len=str3.size;
	cout<<"size of string is "<<len<<endl;
	return 0;
}
