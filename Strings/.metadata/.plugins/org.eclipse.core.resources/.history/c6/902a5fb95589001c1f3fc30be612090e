#include <iostream>
#include<string.h>
using namespace std;
string remove_spaces(string str)
{
	stringstream s(str);
	string temp="";
	str="";
	while(ss>>temp)
	{
		str+=temp;
	}

	return temp;

}
int main() {
	string str="Hello from the other side ";

	cout<<remove_spaces(str)<<endl;


	return 0;
}
